<div class="container">

	<div class="row">

		<h1>Eat-Da-Burger!</h1>

		<img src="../public/images/burger1.png" alt="burger">

	</div>

</div>

<div class="container">

	<div class="row">

		<div class="col-sm-6">

			<h2>Burgers to be eaten!</h2>

			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						{{> burger-block devour=true}}
					{{/unless}}
				{{/each}}
			</ul>

		</div>

		<div class="col-sm-6">

			<h2>Burgers that have been eaten!</h2>

			<ul>
   				{{#each burgers}}
        			{{#if devoured}}
           			 	{{> burger-block devour=false}}
       				{{/if}}
    			{{/each}}
			</ul>

		</div>

	</div>

	<div class="row">

		<div class="col-sm-12">

			<h2>Add a Burger</h2>
			<form class="create-form">

				<div class="form-group">
					<label for="ca">Burger Name:</label>
					<input type="text" id="ca" name="burger_name">
				</div>

				<button type="submit">Add Burger</button>
			</form>

		</div>

	</div>

</div>